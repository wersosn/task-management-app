<Window x:Class="SuperZTP.Views.AddTagWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SuperZTP.Views"
        xmlns:resx="clr-namespace:SuperZTP.Resources"
        mc:Ignorable="d"
        Title="{x:Static resx:Strings.AddTag}" Height="300" Width="400" WindowStartupLocation="CenterScreen" Background="{StaticResource BackgroundDarker}">
    <StackPanel Margin="75">
        <TextBlock Text="{x:Static resx:Strings.Name}" HorizontalAlignment="Center" Margin="0 10 0 0" Foreground="{StaticResource TextPrimary}"/>
        <TextBox Name="TagNameTextBox" Width="200" Height="25"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Name="AddTagButton" Content="{x:Static resx:Strings.AddTag}" Width="100" Height="30" Margin="5" Click="AddTagButton_Click"/>
            <Button Content="{x:Static resx:Strings.Cancel}" Click="CancelButton_Click" Width="100" Height="30" Margin="5" />
        </StackPanel>
    </StackPanel>
</Window>
