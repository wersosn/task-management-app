<UserControl x:Class="SuperZTP.Views.TaskDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SuperZTP.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             FontSize="16">
    <Grid>
        <Border 
            BorderBrush="{StaticResource BorderPrimary}"
            SnapsToDevicePixels="True"
            BorderThickness="1"
            CornerRadius="5"
            Padding="15">
            <Grid>
                <!-- Kalendarz (usunięto duplikaty) -->
                <Calendar x:Name="CalendarView"/>

                <!-- Widok bez wybranego zadania -->
                <Grid>
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasNoSelection}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <TextBlock Text="Wybierz zadanie bądź notatkę, aby zobaczyć szczegóły."
                               FontSize="18"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="{StaticResource TextSecondary}"/>
                </Grid>

                <!-- Szczegóły zadania -->
                <Grid Grid.IsSharedSizeScope="True">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasSelectedTask}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Tytuł -->
                    <TextBlock FontSize="24"
                               FontWeight="Bold"
                               Text="{Binding Title}"
                               Margin="0 0 0 10"
                               Foreground="{StaticResource TextPrimary}"/>

                    <!-- Kategoria -->
                    <Grid Grid.Row="1" Grid.Column="0" Margin="0 5 0 5">
                        <TextBlock Grid.Column="0" Text="Kategoria: "
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Grid.Column="1"
                                   Text="{Binding Category}"
                                   Foreground="{StaticResource TextSecondary}"/>
                    </Grid>

                    <!-- Tag -->
                    <Grid Grid.Row="1" Grid.Column="1" Margin="0 5 0 5">
                        <TextBlock Grid.Column="0" Text="Tag:"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Grid.Column="1"
                                   Text="{Binding Tag}"
                                   Foreground="{StaticResource TextSecondary}"/>
                    </Grid>

                    <!-- Priorytet -->
                    <Grid Grid.Row="2" Grid.Column="0" Margin="0 5 0 5">
                        <TextBlock Grid.Column="0" Text="Priorytet: "
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Grid.Column="1"
                                   Text="{Binding Priority}"
                                   Foreground="{StaticResource TextSecondary}"/>
                    </Grid>

                    <!-- Status -->
                    <Grid Grid.Row="2" Grid.Column="1" Margin="0 5 0 5">
                        <TextBlock Grid.Column="0" Text="Status:"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Grid.Column="1"
                                   Text="{Binding IsDone}"
                                   Foreground="{StaticResource TextSecondary}"/>
                    </Grid>

                    <!-- Data wykonania -->
                    <Grid Grid.Row="2" Grid.Column="2" Margin="0 5 0 5">
                        <TextBlock Grid.Column="0" Text="Data:"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Grid.Column="1"
                                   Text="{Binding Date, StringFormat='{}{0:dd/MM/yyyy}'}"
                                   Foreground="{StaticResource TextSecondary}"/>
                    </Grid>

                    <!-- Opis -->
                    <Grid Grid.Row="6" Margin="0 5 0 0" ColumnSpan="3">
                        <TextBlock Grid.Column="0" Text="Opis:"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Grid.Column="1"
                                   Text="{Binding Description}"
                                   TextWrapping="Wrap"
                                   Foreground="{StaticResource TextSecondary}"/>
                    </Grid>

                    <!-- Przyciski Akcji -->
                    <Grid Grid.Row="7" Margin="0 10 0 0" ColumnSpan="3">
                        <Button Content="{Binding ButtonLabel}" 
                                Command="{Binding ChangeStatusCommand}" 
                                IsEnabled="{Binding IsButtonEnabled}" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Bottom" 
                                Margin="5"/>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>